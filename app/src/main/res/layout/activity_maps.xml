<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
android:id="@+id/map_container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="400dp">

     <fragment
         android:id="@+id/map1"
         android:layout_width="match_parent"
         android:layout_height="400dp"
         android:layout_weight="0.5"
         class="com.google.android.gms.maps.SupportMapFragment"
         map:cameraTargetLat="40.72"
         map:cameraTargetLng="-74.00"
         map:cameraZoom="8" />
 </RelativeLayout>


<RelativeLayout
    android:id="@+id/map_container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="405dp"
    android:layout_alignParentTop="true"
    android:layout_weight="1.8"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/EmergencyZoneSavedTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="230dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:text="Emergency Zone: "
        android:textSize="16sp"
        android:gravity="center_vertical"/>

    <TextView
    android:id="@+id/YourLocationTag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="210dp"
    android:layout_marginTop="25dp"
    android:fontFamily="sans-serif"
    android:singleLine="true"
    android:textColor="@android:color/black"
    android:text="Your Current Location:"
    android:textSize="16sp"
    android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/SecurityMessageTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop="55dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="Security Message:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/SecurityMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="55dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:singleLine="false"
        android:text="Message is loading"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/LatLng_SavedMapTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/LatLng_CurrentMapTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/EmergencyIdMapTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ID"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/EmergencystatusMapTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ID"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/EmergencyTypeMapTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ID"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/UserIDMapTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ID"
        android:visibility="invisible"/>
</RelativeLayout>
</RelativeLayout>
